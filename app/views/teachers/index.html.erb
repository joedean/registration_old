<div class="container">
  <div class="row">
    <h3>Teachers</h3>
    <table class="table table-hover">
      <thead>
        <th>Teacher Name</th>
        <th>Scheduled Payroll Hours</th>
        <th>Subbed Hours</th>
        <th>Total Pay Period Hours</th>
        <th>Edit</th>
      </thead>
      <tbody>
        <% @teachers.each do |teacher| %>
          <tr>
            <td><%= teacher.name %></td>
            <td><%= teacher.payroll_hours %></td>
            <td> 0 </td>
            <td><%= teacher.total_payroll_hours %></td>
            <td>
              <%= link_to(edit_teacher_path(teacher), class: 'button-xs') do %>
                <span class="glyphicon glyphicon-pencil"></span>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
