<%= form_for @teacher, html: {class: 'form-horizontal', role: 'form'} do |form| %>

  <div class="form-group">
    <%= form.label :first_name, class: 'col-xs-2 control-label' %>
    <div class="col-xs-6">
      <%= form.text_field :first_name, class: 'form-control', placeholder: "First Name" %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :last_name, class: 'col-xs-2 control-label' %>
    <div class="col-xs-6">
      <%= form.text_field :last_name, class: 'form-control', placeholder: "Last Name" %>
    </div>
  </div>

  <h4> Classes </h4>
  <% for course in Course.list %>
    <div>
      <%= check_box_tag "teacher[course_ids][]", course.id, @teacher.courses.include?(course) %>
      <%= course.name %> <%= course.level %> <%= course.day %> from <%= course.start_time %> to <%= course.end_time %>
    </div>
  <% end %>

  <div class="form-group">
    <div class="col-sm-12">
      <button type="submit" class="btn btn-default">Save</button>
    </div>
  </div>

<% end %>
