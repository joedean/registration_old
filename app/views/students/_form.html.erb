<%= form_for @student, html: {class: 'form-horizontal', role: 'form'} do |form| %>

  <div class="form-group">
    <%= form.label :birth_date, class: 'col-xs-2 control-label' %>
    <div class="col-sm-3">
      <%= form.date_field :birth_date, class: 'form-control', placeholder: :birth_date %>
    </div>
    <%= form.label :age, class: 'col-xs-2 control-label' %>
    <div class="col-sm-3">
      <%= form.label @student.age, class: 'col-xs-2 control-label' %>
    </div>
  </div>

  <h4> Classes </h4>

  <% Course::STUDIOS.each do |studio| %>
     <center><h3>Studio <%= studio %></h3></center>
     <div id="studio<%= studio %>CourseCalendar"></div>
  <% end %>

  <div class="form-group">
    <div class="col-sm-12">
      <button type="submit" class="btn btn-default">Save</button>
    </div>
  </div>
<% end %>
