<div class="panel panel-default fields">
  <div class="panel-body">
    <div class="form-group">
      <%= form.label :name, class: 'col-xs-2 control-label' %>
      <div class="col-sm-3">
        <%= form.text_field :first_name, class: 'form-control', placeholder: "First Name" %>
      </div>
      <div class="col-sm-3">
        <%= form.text_field :last_name, class: 'form-control', placeholder: "Last Name" %>
      </div>
      <div class="col-sm-3 pull-right">
        <%= link_to_remove_fields "Remove Guardian", form %>
      </div>
    </div>

    <div class="form-group">
      <%= form.label :mobile_phone, class: 'col-xs-2 control-label' %>
      <div class="col-sm-6">
        <%= form.phone_field :mobile_phone, class: 'form-control', placeholder: "Mobile Phone" %>
      </div>
    </div>

    <div class="form-group">
      <%= form.label :work_phone, class: 'col-xs-2 control-label' %>
      <div class="col-sm-6">
        <%= form.phone_field :work_phone, class: 'form-control', placeholder: "Work Phone" %>
      </div>
    </div>

    <div class="form-group">
      <%= form.label :email, class: 'col-xs-2 control-label' %>
      <div class="col-sm-6">
        <%= form.text_field :email, class: 'form-control', placeholder: "Email" %>
      </div>
    </div>
  </div>
</div>
